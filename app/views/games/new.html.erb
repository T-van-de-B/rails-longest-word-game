<h1>New Game</h1>
<ul id="array">
<% @letters.each do |letter| %>
  <li><%= letter %></li>
<% end %>
</ul>
<p></p>
<form class="form" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  What is the longest word you can find? <br>
  <%= hidden_field_tag :collected_letters, @letters %>
  <input type="text" name="word" placeholder="word" ><br>
  <input type="submit" value="Play">
</form>

